<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#000000"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="SCAN"
        android:textSize="30dp"
        android:textColor="#ffffff"
        android:id="@+id/scan"
        android:onClick="scanNow"
        android:layout_marginBottom="139dp"
        android:layout_alignParentBottom="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SearchviaGOOGLE"
        android:id="@+id/search"
        android:onClick="search"
        android:layout_above="@+id/find"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtOutput"
        android:textColor="#ffffff"
        android:text="The Barcode Scanner"
        android:layout_alignRight="@+id/search"
        android:layout_alignEnd="@+id/search"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FindviaCAMELcamelCAMEL"
        android:id="@+id/find"
        android:onClick="find"
        android:layout_above="@+id/scan"/>


</RelativeLayout>
